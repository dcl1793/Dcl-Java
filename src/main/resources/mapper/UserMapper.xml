<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hs.dcl.test.dao.UserMapper">

    <resultMap id="UserInfo" type="hs.dcl.test.model.User">
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
    </resultMap>

    <select id="selectUser"  resultMap="UserInfo">
       SELECT id, name , age FROM test_poi  limit #{page}, #{rows}
    </select>

    <select id="selectCountUser"  resultType="int">
       SELECT count(*) FROM test_poi
    </select>
</mapper>